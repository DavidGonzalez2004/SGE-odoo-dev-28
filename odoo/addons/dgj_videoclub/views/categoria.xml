<odoo>
  <data>

    <record id="dgj_videoclub.categoria_form" model="ir.ui.view">
      <field name="name">dgj_videoclub.categoria.form</field>
      <field name="model">dgj_videoclub.categoria</field>
      <field name="arch" type="xml">
        <form string="Categoría">
          <sheet>
            <group>
              <field name="name"></field>
              <field name="descripcion"></field>
              <field name="pelicula_ids">
                <tree string="Película">
                  <field name="name"></field>
                  <field name="precio_alquiler"></field>
                  <field name="director"></field>
                  <field name="fecha_lanzamiento"></field>
                  <field name="portada" widget="image"></field>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="dgj_videoclub.categoria_tree" model="ir.ui.view">
      <field name="name">dgj_videoclub.categoria.tree</field>
      <field name="model">dgj_videoclub.categoria</field>
      <field name="arch" type="xml">
        <tree string="Categoría">
            <field name="name"></field>
            <field name="descripcion"></field>
        </tree>
      </field>
    </record>

  </data>
</odoo>